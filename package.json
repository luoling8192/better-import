{
  "name": "@unbird/better-import",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.20.0",
  "description": "CLI tool to detect replaceable dependencies in package.json",
  "author": "RainbowBird <rbxin2003@outlook.com>",
  "license": "MIT",
  "keywords": [
    "dependency",
    "cli",
    "monorepo",
    "package-manager"
  ],
  "bin": {
    "better-import": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "node src/cli.ts",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "publish": "pnpm build && pnpm publish --access public --no-git-checks"
  },
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "fast-glob": "^3.3.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@unbird/eslint-config": "^1.0.2",
    "jiti": "^2.6.1",
    "tsdown": "^0.15.12",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "oclif": {
    "bin": "better-import",
    "dirname": "better-import",
    "commands": "./dist/commands",
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  }
}
